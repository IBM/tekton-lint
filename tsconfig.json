{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./lib",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
