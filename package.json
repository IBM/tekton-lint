{
  "name": "@cocoa/tekton-lint",
  "publishConfig": {
    "registry": "https://eu.artifactory.swg-devops.com/artifactory/api/npm/wcp-compliance-automation-team-npm-local/"
  },
  "files": [
    "lint.js",
    "rules.js",
    "collect-resources.js",
    "Collector.js"
  ],
  "scripts": {
    "lint": "eslint './*.js'",
    "sanity-check": "NODE_ENV=test node lint.js 'regression-tests/**/*.yaml'"
  },
  "version": "0.0.14",
  "description": "Linter for Tekton definitions",
  "main": "rules.js",
  "repository": {
    "type": "git",
    "url": "git@github.ibm.com:cocoa/tekton-lint.git"
  },
  "bin": {
    "tekton-lint": "lint.js"
  },
  "author": "Bence DÃ¡nyi <bence.danyi@ibm.com>",
  "license": "MIT",
  "dependencies": {
    "fast-glob": "^3.2.2",
    "yaml": "^1.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "eslint": "^6.8.0",
    "husky": "^4.2.3"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run sanity-check",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
