{
  "name": "tekton-lint",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    ".tektonlintrc.yaml"
  ],
  "scripts": {
    "lint": "eslint --ext ts src",
    "test": "jest",
    "build": "tsc",
    "prepare": "npm run build",
    "coverage": "jest --coverage"
  },
  "version": "0.6.0",
  "description": "Linter for Tekton definitions",
  "main": "lib/runner.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:IBM/tekton-lint.git"
  },
  "bin": {
    "tekton-lint": "lib/lint.js"
  },
  "contributors": [
    "Matthew White <whitemat@uk.ibm.com>",
    "Bence DÃ¡nyi <bence.danyi@ibm.com>"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "fast-glob": "^3.3.2",
    "graphlib": "^2.1.8",
    "minimist": "^1.2.8",
    "source-map-support": "^0.5.21",
    "strip-ansi": "^6.0.1",
    "text-table": "^0.2.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/jest": "^29.5.10",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^6.8.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests",
      "<rootDir>/regression-tests"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}