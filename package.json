{
  "name": "@ibm/tekton-lint",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    ".tektonlintrc.yaml"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint --ext ts src",
    "test": "jest",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "prebuild": "npm run format && npm run clean && npm run lint",
    "build": "tsc --pretty",
    "coverage": "jest --coverage",
    "prepare": "husky install",
    "release": "commit-and-tag-version --sign"
  },
  "version": "0.6.1",
  "description": "Linter for Tekton definitions",
  "main": "lib/runner.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/IBM/tekton-lint.git"
  },
  "bin": {
    "tekton-lint": "dist/lint.js"
  },
  "contributors": [
    "Matthew White <whitemat@uk.ibm.com>",
    "Bence DÃ¡nyi <bence.danyi@ibm.com>"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "fast-glob": "^3.3.2",
    "graphlib": "^2.1.8",
    "minimist": "^1.2.8",
    "source-map-support": "^0.5.21",
    "strip-ansi": "^6.0.1",
    "text-table": "^0.2.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/jest": "^29.5.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "commit-and-tag-version": "^12.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests",
      "<rootDir>/regression-tests"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
