  "author": "Bence DÃ¡nyi <bence.danyi@ibm.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^4.1.0",
    "chokidar": "^3.4.0",
    "fast-glob": "^3.2.2",
